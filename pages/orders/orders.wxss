.order-page .tabs-order {
  background: #ffffff;
}
.order-page .list-order {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.order-page .list-order-item {
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  margin: 0 30rpx;
  border-radius: 30rpx;
}
.order-page .list-order-item:not(:first-child) {
  margin-top: 20rpx;
}
.order-page .list-order-item-header {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e2e2e2;
}
.order-page .list-order-item-header .tag {
  color: #883c41;
  float: left;
}
.order-page .list-order-item-header .order-number {
  color: #3d3d3d;
  float: left;
}
.order-page .list-order-item-header .order-status {
  color: #baaf96;
  float: right;
}
.order-page .list-order-item-body {
  width: 100%;
  display: inline-flex;
  padding: 30rpx 0 30rpx 0;
  border-bottom: 1px solid #e2e2e2;
}
.order-page .list-order-item-body .shop-view {
  min-width: 200rpx;
  max-width: 200rpx;
  min-height: 200rpx;
  max-height: 200rpx;
}
.order-page .list-order-item-body .shop-view .img {
  width: 100%;
  height: 100%;
}
.order-page .list-order-item-body .shop-attr {
  margin-left: 48rpx;
}
.order-page .list-order-item-body .shop-attr-shape {
  color: #3d3d3d;
}
.order-page .list-order-item-body .shop-attr-specs {
  color: #b3b3b3;
  margin-top: 10rpx;
}
.order-page .list-order-item-body .shop-attr-total {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.order-page .list-order-item-body .shop-attr-total-nums {
  color: #b3b3b3;
}
.order-page .list-order-item-body .shop-attr-total-amount {
  color: #3d3d3d;
}
.order-page .list-order-item-footer {
  margin-top: 24rpx;
}
.order-page .list-order-item-footer .order-mark {
  color: #3d3d3d;
}
.order-page .list-order-item-footer .order-total {
  color: #3d3d3d;
  text-align: right;
  margin-top: 30rpx;
}
.order-page .list-order-item-footer .btn-delete-order {
  overflow: hidden;
  margin-top: 20rpx;
}
.order-page .list-order-item-footer .btn-delete-order .button {
  float: right;
  font-size: 28rpx;
  border: 1px solid #beae92;
  color: #beae92;
  background-color: transparent;
  border-radius: 10rpx;
  text-align: center;
  width: 164rpx;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 30rpx;
  box-sizing: content-box;
}
.order-page .list-order-item-footer .btn-delete-order .button::after {
  border: none;
}
.order-page .list-order-none {
  text-align: center;
  padding-top: 100rpx;
  color: #888888;
}
