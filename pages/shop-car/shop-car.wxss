.shop-car-goods {
  padding: 44rpx 20rpx 140rpx 20rpx;
}
.guess-you-like-title {
  text-align: center;
  color: #3d3d3d;
  margin: 44rpx 0;
  font-size: 32rpx;
}
.shop-car-none {
  text-align: center;
  padding-top: 100rpx;
  color: #888888;
}
.shop-car-buy {
  width: 100%;
  height: 100rpx;
  display: inline-flex;
  position: fixed;
  z-index: 12;
  bottom: 0;
}
.shop-car-buy-all {
  height: 100%;
  line-height: 100rpx;
  background-color: #3d3d3d;
  color: #ffffff;
  flex: 4;
  padding: 0 20rpx;
  display: inline-flex;
  justify-content: space-between;
}
.shop-car-buy-all .total {
  font-size: 28rpx;
}
.shop-car-buy-all .total .amount {
  font-size: 36rpx;
}
.shop-car-buy-goods {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  color: #ffffff;
  background-color: #fe5d00;
}
.tips {
  text-align: center;
  font-size: 40rpx;
  margin: 84rpx 40rpx 40rpx;
  line-height: 60rpx;
}
.btn-i-know {
  color: #ffffff;
  text-align: center;
  margin: 20rpx 40rpx 80rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 36rpx;
}
