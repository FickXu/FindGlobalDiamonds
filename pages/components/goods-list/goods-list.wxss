.goods-list {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
}
.goods-list:not(:first-child) {
  margin-top: 20rpx;
}
.goods-list .invalid-goods {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  color: #fff;
  z-index: 10;
}
.goods-list-body {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  padding: 56rpx 0 20rpx 0;
  position: relative;
}
.goods-list-body .goods-delete-box {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: 46rpx;
  z-index: 11;
}
.goods-list-body .goods-view {
  flex: 1;
}
.goods-list-body .goods-view .img {
  min-width: 150rpx;
  max-width: 150rpx;
  min-height: 150rpx;
  max-height: 150rpx;
  margin-left: 10rpx;
}
.goods-list-body .goods-attr {
  flex: 4;
  margin-left: 10rpx;
}
.goods-list-body .goods-attr-shape {
  color: #3e3e3e;
}
.goods-list-body .goods-attr-selling {
  color: #b3b3b3;
  margin-top: 20rpx;
}
.goods-list-body .goods-attr-selling-price {
  text-decoration: line-through;
}
.goods-list-body .goods-attr-vip {
  margin-top: 10rpx;
  color: #893c41;
}
