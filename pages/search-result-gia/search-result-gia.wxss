.page-container {
  height: calc('~100vh - (100rpx + env(safe-area-inset-bottom) / 2)');
}
.notice-info {
  background-color: #fcf9eb;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  color: #e2894c;
  position: fixed;
  z-index: 99;
}
.result-table {
  padding-bottom: 170rpx;
}
.result-table-body {
  background-color: #fff;
  height: 100%;
}
.result-table-body-th {
  width: 100%;
  height: 100%;
}
.result-table-body-th .checked-list {
  min-width: 72rpx;
  max-width: 72rpx;
}
.result-table-body-th .checked-list .checkbox {
  height: 64rpx;
  line-height: 64rpx;
}
.result-table-body-th .goods-list {
  overflow-x: auto;
  overflow-y: hidden;
  padding-top: 60rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
}
.result-table-body-th .goods-list .result-table-body-tr {
  height: 64rpx;
  line-height: 64rpx;
  display: inline-flex;
  flex-wrap: nowrap;
}
.result-table-body-th .goods-list .header {
  height: 64rpx;
  line-height: 64rpx;
  color: #ffffff;
  background-color: #6a9ee7;
}
.result-table-body-th .goods-list .col-checkbox {
  background-color: #fff;
}
.result-table-body-th .goods-list .result-table-body-tr-td {
  min-width: 96rpx;
  text-align: center;
}
.result-table-body-th .goods-list .td-large {
  min-width: 200rpx;
}
.pages {
  width: 100%;
  display: inline-flex;
  justify-content: space-evenly;
  align-items: center;
  position: fixed;
  bottom: 98rpx;
  background-color: #fff;
}
.btn-goods-operation {
  min-width: 60%;
  display: inline-flex;
}
.btn-goods-operation .btn {
  min-width: 48%;
  color: #ffffff;
  font-weight: 700;
  font-size: 30rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.btn-goods-operation .add-shop-car {
  border-radius: 50rpx 0 0 50rpx;
  background-color: #ffc200;
}
.btn-goods-operation .buy-now {
  border-radius: 0 50rpx 50rpx 0;
  background-color: #fe5d00;
}
.tips {
  text-align: center;
  font-size: 40rpx;
  margin: 84rpx 40rpx 40rpx;
  line-height: 60rpx;
}
.btn-i-know {
  color: #ffffff;
  text-align: center;
  margin: 20rpx 40rpx 80rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 36rpx;
}
